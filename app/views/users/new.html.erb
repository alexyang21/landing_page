<div id="content">

	<%= image_tag('roomtaker8.png', :class => "logo") %>
	
	<div id="box">
		<h1>Taking vacation soon?</h1>

		<h2>An experienced property manager will pay you to rent out your space!</h2>

		<ul class="bullets">
			<li>Our team takes care of all tenant communications, key exchange, and cleaning fees while you're away</li>
			<li>Rest easy with Room Taker's insurance coverage</li>
			<li>When you finally grow tire of traveling the world, you return to a clean home!</li>
		</ul>
	</div>

	<a id="sign_up_link" href="#sign_up_modal" class="btn btn-large btn-primary" 
					role="button" data-toggle="modal" data-backdrop="static">Get started now</a>

	<div id="sign_up_modal" class="modal hide fade" aria-hidden="true">
		
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" 
									aria-hidden="true">&times;</button>
			<h3>Thanks for your interest!</h1>
		</div>

		<div class="modal-body">			

			<form accept-charset="UTF-8" action="/users" class="new_user" id="new_user" method="post">
				<%= render 'shared/error_messages' %> 

				<input id="user_first_name" name="user[first_name]" type="text" placeholder="First Name" autocomplete="off" class="required span3"/>
				
				<input id="user_last_name" name="user[last_name]" type="text" placeholder="Last Name" autocomplete="off" class="required span3"/></br>
				
				<input id="user_email" name="user[email]" type="email" placeholder="Email Address" autocomplete="off" class="required span6"/></br>
				
				<input id= "user_vacation_start" name="user[vacation_start]" type="text" data-behaviour="datepicker" placeholder="Vacation start date" class="required span3">
				
				<input id="user_vacation_end" name="user[vacation_end]" type="text" data-behaviour="datepicker" placeholder="Vacation return date" class="required span3"></br>
				
				<input id="user_zipcode" name="user[zipcode]" type="text" placeholder="Zipcode" autocomplete="off" class="required span3"/></br>

				<div class="sign_up_btn" style="text-align: center">
					<input class="btn btn-success" name="commit" type="submit" value="Sign Up"/>
				</div>
			</form>
		</div>
	</div>

</div>

<script type="text/javascript">
	$(document).ready(function () {
		$('[data-behaviour~=datepicker]').datepicker({
			"format": "mm-dd-yyyy",
			"autoclose": true,
			"tabindex": -1,
			"role": "dialog",
			
		});
	});
</script>
